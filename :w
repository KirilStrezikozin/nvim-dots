# Example windowrule v1
# windowrule = float, ^(kitty)$
# Example windowrule v2
# windowrulev2 = float,class:^(kitty)$,title:^(kitty)$
# See https://wiki.hyprland.org/Configuring/Window-Rules/ for more

windowrulev2 = opacity 0.9 override 0.75 override 1.0 override,title:(.*)$
windowrulev2 = opacity 1.0 override 1.0 override 1.0 override,class:(foot)(.*)$
windowrule = nodim,title:(cava)$
windowrule = noblur,title:(PureRef)$
windowrule = noblur,title:(Annotation - Zoom)$
windowrule = nodim,title:(Annotation - Zoom)$
windowrule = nodim,title:(Zoom)$
windowrule = opacity 1.0,title:(.*)(Aseprite)(.*)$
# windowrule = noblur,title:(kemplerart)(.*)$
windowrule = opacity 1.0,title:(kemplerart)(.*)$
windowrule = size 110% 110%,title:(PureRef)$
windowrule = move -5% -5%,title:(PureRef)$
windowrule = pin,title:(PureRef)$
windowrule = noborder,title:(PureRef)$
windowrule = nodim,class:(blender)
windowrule = noblur,class:(blender)
windowrulev2 = opacity 1.0 1.0 1.0 override,class:(blender)

