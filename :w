    follow_mouse = 1

    touchpad {
        natural_scroll = no
    }

    sensitivity = 0 # -1.0 - 1.0, 0 means no modification.
    scroll_button = 274
}

general {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    gaps_in = 5
    gaps_out = 50
    border_size = 2
    col.inactive_border = rgba(DEA4A3aa) rgba(6C6672ee) 45deg
    # col.inactive_border = rgba(30404aaa)
    col.active_border = rgba(FFFFFFff)

    layout = dwindle
    resize_on_border = true
    hover_icon_on_border = false

    sensitivity = 0.75
    no_cursor_warps = true
}

decoration {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    rounding = 5
    
